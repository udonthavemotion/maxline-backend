{
  "kind": "collectionType",
  "collectionName": "gallery_items",
  "info": {
    "singularName": "gallery-item",
    "pluralName": "gallery-items",
    "displayName": "Gallery Item",
    "description": "Homepage gallery items for Life at Max Line Bulldogs section"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "description": {
      "type": "text",
      "required": true,
      "maxLength": 500
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "alt_text": {
      "type": "string",
      "required": true,
      "maxLength": 200
    },
    "order": {
      "type": "integer",
      "required": true,
      "min": 1,
      "max": 20
    }
  }
} 